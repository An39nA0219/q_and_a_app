<header class="mb-4">
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
    <% if logged_in? && current_user.admin && is_for_admin? %>
    <a class="navbar-brand" href="/admins/questions">Q&A for Admin</a>
    <% else %>
    <a class="navbar-brand" href="/questions">Q&A</a>
    <% end %>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarSupportedContent"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div
      class="collapse navbar-collapse justify-content-end"
      id="navbarSupportedContent"
    >
      <ul class="navbar-nav">
        <% if logged_in? && current_user.admin && is_for_admin? %>
        <li class="nav-item">
          <%= link_to 'ユーザー一覧', admins_users_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= button_to 'ログアウト', admins_logout_path, method: :delete,
          class: 'nav-link button-to-ink' %>
        </li>
        <% elsif logged_in? && !is_for_admin? %>
        <li class="nav-item">
          <%= link_to '質問作成', new_question_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'ユーザー一覧', users_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to "#{current_user.name}さん マイページ",
          user_path(current_user.id), class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= button_to 'ログアウト', logout_path, method: :delete, class:
          'nav-link button-to-ink' %>
        </li>
        <% else %>
        <li class="nav-item">
          <%= link_to 'サインアップ', signup_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'ログイン', login_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to '管理者ページ ログイン', admins_login_path, class:
          'nav-link' %>
        </li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>
