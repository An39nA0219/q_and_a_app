<div class="card" style="width: 100%">
  <div class="card-body flex">
    <div class="left-part">  
      <div class="icon-area">          
        <% if question.user.image.attached? %>
          <%= image_tag question.user.image, class: "icon" %>
        <% else %>
          <%= image_tag 'default_user.png', class: "icon" %>
        <% end %>
      </div>
      <div style="text-align: center">
        <%= question.user.name %>
        <br>
        <%= question.created_at.to_s(:db) %>
      </div>
    </div>
    <div class="card-title">
      <div class="right-part">
        <div style="display: flex">
          <div>
            <%= link_to question.title, show_path %>
          </div>
          <div>
            <%= render 'layouts/question_status_badge', question: question %>
          </div>
          <div>
            <%= render 'layouts/question_control_buttons', question: question %>
          </div>
        </div>
        <div style="margin-top: 20px">
          <%= content_sumnail(question.content) %>
        </div>
      </div>
    </div>
  </div>
</div>
