<% if logged_in? && current_user == @user %>
  <div class="wrapper">
    <h1>アカウント情報</h1>

    <div class="container">
      <div style="width: 100%">
        <%= link_to '編集', edit_user_path(@user), class: "btn btn-success", style: "float: right" %>
      </div>
      <table class="table">
        <tr>
          <td>名前</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td>アバター</td>
          <td>
            <%= image_tag @user.image, class: "icon" %>
          </td>
        </tr>
      </table>
    </div>
  </div>
<% end %>