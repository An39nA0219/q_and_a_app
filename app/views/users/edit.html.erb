<% if logged_in? && current_user == @user %>
  <div class="wrapper">

    <div class="container">
      <%= form_with model: @user, data: { turbo: false } do |f| %>
        <div class="form-group">
          <%= f.label :name, '名前' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <%= f.submit 'アカウント情報の変更', class: 'btn btn-primary btn-block'%>
      <% end %>
    </div>
  </div>
<% end %>