<% if logged_in? %>
  <div class="container">
    <%= form_with model: @question, data: { turbo: false } do |f| %>
      <div class="form-group">
        <%= f.label :title, 'タイトル' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :content, '内容' %>
        <%= f.text_area :content, rows: 10, class: 'form-control' %>
      </div>
      <%= f.submit '質問を投稿する', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
<% end %>